        {"id": "PYBRD0030_supply",        "enable": true,  "name": "V1", "voltage_mv": 2000, "en": true, },
        {"id": "PYBRD0030_supply",        "enable": true,  "name": "V2", "voltage_mv": 3000, },

        {"id": "PYBRD0040_relay_v12",     "enable": true,  "connect": true },
        {"id": "PYBRD0050_relay_vsys",    "enable": true,  "connect": true },
        {"id": "PYBRD0060_relay_vbat",    "enable": true,  "connect": true },

