    "product": "pybrd_1",
    "bom": "B00101-001",
    "lot": "95135",
    "location": "canada/ontario/milton"
  },
  "config": {
    "fail_fast": false,
    "drivers": ["public.prism.drivers.iba01.hwdrv_iba01"]
